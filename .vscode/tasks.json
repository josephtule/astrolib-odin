{
  "version": "2.0.0",
  "command": "",
  "args": [],
  "tasks": [
    // mac/linux builds --------------------------------------------------------
    {
      "label": "mkdir",
      "type": "shell",
      "command": "mkdir -p build; rm -rf ./build/debug.*"
    },
    // main
    {
      "label": "build",
      "type": "shell",
      "command": "odin build . -debug -out:build/debug",
      "group": "build"
    },
    {
      "label": "Build",
      "dependsOn": ["mkdir", "build"]
    },
    // sandbox
    {
      "label": "build_sandbox",
      "type": "shell",
      "command": "odin build sandbox -debug -out:build/debug",
      "group": "build"
    },
    {
      "label": "Build_sandbox",
      "dependsOn": ["mkdir", "build"]
    },

    // windows builds ----------------------------------------------------------
    {
      "label": "mkdir_win",
      "type": "shell",
      "command": "cmd",
      "args": ["/C", "if not exist .\\build mkdir .\\build"]
    },
    // main
    {
      "label": "build_win",
      "type": "shell",
      "command": "odin build . -debug -out:build/debug.exe",
      "group": "build"
    },
    {
      "label": "Build_win",
      "dependsOn": ["mkdir_win", "build_win"]
    },

    // sandbox
    {
      "label": "build_sandbox_win",
      "type": "shell",
      "command": "odin build sandbox -debug -out:build/debug.exe",
      "group": "build"
    },
    {
      "label": "Build_sandbox_win",
      "dependsOn": ["mkdir_win", "build_sandbox_win"]
    }
  ]
}
